<h3>Exchange Post List</h3>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Num</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% post_number = 1 %>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%=post_number%></th>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% post_number = post_number + 1 %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Post', new_post_path, class: "btn btn-info" %>
<br>

